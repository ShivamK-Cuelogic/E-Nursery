{
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "indent": ["error", 4, { "ImportDeclaration": "first" }],
      "arrow-parens": ["error", "as-needed"],
      "no-extra-parens": ["error", "all", { "ignoreJSX": "all" }],
      "spaced-comment": ["error", "always"],
      "no-var": "error",
      "quotes": [2, "double"],
      "eol-last": [0],
      "no-mixed-requires": [2],
      "no-underscore-dangle": [0],
      "no-console": 0,
      "no-debugger": 0,
      "semi": [1, "always"],
      "no-trailing-spaces": 0,
      "no-alert": 0,
      "no-lone-blocks": 0,
      "no-unused-vars": [1, {
          "vars": "all",
          "args": "after-used"
      }]
    }
  }